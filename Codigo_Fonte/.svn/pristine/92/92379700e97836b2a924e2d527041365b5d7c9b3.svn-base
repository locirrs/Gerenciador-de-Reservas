
@model IEnumerable<GerenciamentoHotel.Models.tb_hospede_checkin>

@{
    ViewBag.Title = "Hóspede de Checkin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Hóspede de Checkin</h2>

<p>
    @Html.ActionLink("Criar Novo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.tb_checkin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tb_hospede.nome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.tb_checkin.tb_hospede.nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tb_hospede.nome)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.codigo }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.codigo }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.codigo })
        </td>
    </tr>
}

</table>
